{
  "name": "@modernpdf/react",
  "version": "0.1.6",
  "description": "React hook for ModernPDF snapshot and PDF generation",
  "license": "MIT",
  "author": "Andrei Laguta",
  "repository": {
    "type": "git",
    "url": "https://github.com/ckkz-it/modernpdf.git",
    "directory": "packages/react"
  },
  "keywords": [
    "pdf",
    "html-to-pdf",
    "react",
    "react-hook",
    "snapshot",
    "dom-snapshot",
    "modernpdf"
  ],
  "homepage": "https://github.com/ckkz-it/modernpdf/tree/main/packages/react#readme",
  "bugs": {
    "url": "https://github.com/ckkz-it/modernpdf/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean --minify --external react",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch --external react",
    "modernpdf:publish": "pnpm publish --access public"
  },
  "dependencies": {
    "@modernpdf/core": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}

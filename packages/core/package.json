{
  "name": "@modernpdf/core",
  "version": "0.1.3",
  "description": "Core snapshot and PDF generation logic for ModernPDF",
  "license": "MIT",
  "author": "Andrei Laguta",
  "repository": {
    "type": "git",
    "url": "https://github.com/ckkz-it/modernpdf.git",
    "directory": "packages/core"
  },
  "keywords": [
    "pdf",
    "html-to-pdf",
    "snapshot",
    "dom-snapshot",
    "modernpdf",
    "client"
  ],
  "homepage": "https://github.com/ckkz-it/modernpdf/tree/main/packages/core#readme",
  "bugs": {
    "url": "https://github.com/ckkz-it/modernpdf/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean --minify",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "modernpdf:publish": "pnpm publish --access public"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
